{
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "test/*",
        "src/test/*",
        "*.md"
      ],
      "npmClient": "npm",
      "npmClientArgs": ["--access", "public"]
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "npmClient": "pnpm",
  "version": "independent"
}
